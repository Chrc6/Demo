<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chrc.kotlindemo.activity.AndroidGrammarTestActivity">

    <TextView
        android:id="@+id/android_grammar_test_tv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="first"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/android_grammar_test_tv_sec"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="second"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/android_grammar_test_tv"/>

</androidx.constraintlayout.widget.ConstraintLayout>